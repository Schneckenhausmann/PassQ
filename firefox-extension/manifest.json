{
  "manifest_version": 2,
  "name": "PassQ - Password Manager",
  "version": "1.0.0",
  "description": "Secure password autofill extension for PassQ password manager",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://localhost/*",
    "https://localhost/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_end"
  }],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PassQ",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    "passq-overlay.html",
    "icons/*"
  ]
}