{
  "manifest_version": 3,
  "name": "PassQ - Password Manager",
  "version": "1.0.0",
  "description": "Secure password autofill extension for PassQ password manager",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_end"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PassQ",
    "default_icon": {
      "16": "icons/icon-48.svg",
      "32": "icons/icon-48.svg",
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon-48.svg",
    "32": "icons/icon-48.svg",
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  
  "web_accessible_resources": [{
    "resources": ["passq-overlay.html", "icons/*"],
    "matches": ["<all_urls>"]
  }]
}